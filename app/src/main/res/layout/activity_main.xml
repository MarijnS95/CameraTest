<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:useDefaultMargins="true"
    android:columnCount="2"
    android:orientation="horizontal">

    <Button
        android:id="@+id/btnDualCamera"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="ButtonClick"
        android:text="@string/multi_camera" />

    <Button
        android:id="@+id/btnParallelCapture"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="ButtonClick"
        android:text="@string/parallel_capture" />

    <Button
        android:id="@+id/btnZslReprocess"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="ButtonClick"
        android:text="@string/zsl_reprocess"/>

    <Button
        android:id="@+id/btnTestMode"
        android:layout_gravity="fill"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:onClick="ButtonClick"
        android:text="@string/test_mode"/>
</GridLayout>
